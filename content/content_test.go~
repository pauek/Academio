
package content

import (
	"fmt"
	"testing"
)

func TestWalk(t *testing.T) {
	roots = []string{"/u", "/o", "/v", "/r/a/b"}
	fmt.Printf("rel: '%s'\n", removeRoot("/u/bin/a"))
	fmt.Printf("rel: '%s'\n", removeRoot("/r/a/b/c"))
	fmt.Printf("rel: '%s'\n", removeRoot("/v"))
	fmt.Printf("rel: '%s'\n", removeRoot("/o/xyz/t"))
}